
@{
    ViewBag.Title = "Rejestracja";
}

    <h2>@ViewBag.Title</h2>
<div>
<form action="~/Form/FormRegisterInput" method="post">
    <div class="form-group">
        <label for="InputLogin">Login:</label>
        <input type="text" class="form-control" runat="server" name="InputLogin" id="InputLogin" placeholder="Enter login">
    </div>
    <div class="form-group">
        <label for="InputEmail">Email</label>
        <input type="email" class="form-control" name="InputEmail" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="InputPassword">Hasło</label>
        <input type="password" class="form-control" name="InputPassword" placeholder="Enter password">
    </div>
    <div class="form-group">
        <label for="InputConfirmPassword">Potwierź Hasło</label>
        <input type="password" class="form-control" name="InputConfirmPassword" placeholder="Confirm password">
    </div>

    <button type="submit" class="submitRegister">Submit</button>

</form>