@model WebApp.Models.UserDataForm

@using (Html.BeginForm("FormRegister", "Form2", FormMethod.Post, new { id = "register"}))
{
    @Html.Label("Login")<br />
    @Html.TextBoxFor(login => login.Login, new { type = "text", placeholder = "Podaj login" })<br />
    @Html.Label("Hasło")<br />
    @Html.TextBoxFor(password => password.Password, new { type = "password", placeholder = "Podaj hasło" })<br />
    @Html.Label("Potwierdź hasło")<br />
    @Html.TextBoxFor(confirmPassword => confirmPassword.ConfirmPassword, new { type = "password", placeholder = "Potwierdź hasło" })<br />
    @Html.Label("Email")<br />
    @Html.TextBoxFor(email => email.Email, new { type = "email", placeholder = "Podaj email" })<br />
    <input type="submit" class =".submit" value="Submit" /><br />
}